@model UserManagementCrudApp.Models.User
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .custom-font {
            font-family: 'Roboto Slab', serif;
        }
    </style>
</head>
<body>
    <div class="container mb-5 mt-5">
        <h1 class="text-center text-primary   display-4 custom-font ">Create View</h1>

        <nav class="row justify-content-center  mb-5 mt-5" >
            <div class="col-3 d-grid">
                <a href="/home/create" class="btn btn-primary">Create View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="/home/read" class="btn btn-primary">Read View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="/home/update" class="btn btn-primary">Update View</a>
            </div>
            <div class="col-3 d-grid">
                <a href="/home/delete" class="btn btn-primary">Delete View</a>
            </div>
        </nav>


        <div class="mb-3 mt-3 container flex-grow-1 py-5">
            @*create input tag and pass attributes to razor templte that is bound to the Email property of the model (User in this case). *@
            <form method="post">
                <div class="mb-3 mt-3">
                    @Html.TextBoxFor(user => user.Name, new { @class = "form-control", placeholder = "Enter your Name" })
                </div>

                <div class="mb-3 mt-3">
                    @Html.TextBoxFor(user => user.Email, new { @class = "form-control", placeholder = "Enter your Email" })
                </div>

                <div class="mb-3 mt-3">
                    @Html.TextBoxFor(user => user.PhoneNumber, new { @class = "form-control", placeholder = "Enter your Phone Number" })
                </div>

                <button class="btn btn-primary" type="submit">Save</button>
            </form>


        </div>





    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>